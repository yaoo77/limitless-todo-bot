LIMITLESS_API_KEY="sk-..."
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/..."
DATABASE_URL="postgresql://user:password@host:5432/database"

# Optional
POLL_INTERVAL_MINUTES=5
LIMITLESS_TIMEZONE="UTC"

# Task Extraction LLM Configuration
TASK_MODEL_PROVIDER="openrouter"
TASK_MODEL_ID="x-ai/grok-4-fast"
OPENROUTER_API_KEY="or-..."
# OPENAI_API_KEY="sk-..."
# ANTHROPIC_API_KEY="sk-ant-..."

# Task Execution (MCP Integration)
ENABLE_TASK_EXECUTION="false"
ZAPIER_MCP_URL="https://mcp.zapier.com/api/mcp/mcp"
ZAPIER_MCP_API_KEY="your-zapier-mcp-api-key-here"

# Daily Archive (GitHub Integration)
ENABLE_DAILY_ARCHIVE="false"
GITHUB_TOKEN="ghp_your-github-personal-access-token"
GITHUB_OWNER="your-github-username"
GITHUB_REPO="obsidian_github"
GITHUB_BRANCH="main"

# Custom Prompts (Optional)
TODO_EXTRACTION_PROMPT="あなたは、ユーザーが入力する会話の文字起こしから、To-Doリストに追加すべき項目を抽出・確認するAIエージェントです。ユーザーが「〜するべき」「リマインドしておきたい」「覚えておきたい」「後で検索したい」といった意図を示す発言があれば、それらをタスクとして認識し、該当するタスクをすべて指定のフォーマットで出力してください。"
TASK_EXECUTION_PROMPT="あなたはユーザーが入力するTodoタスクを実行する便利なAIエージェントです。ユーザーの入力に対して、あなたが持っているツールを適切に活用しながら、ユーザーがやりたいタスクの結果を作成して出力してください。"

# Perplexity Search (Optional)
ENABLE_PERPLEXITY_SEARCH="false"
PERPLEXITY_API_KEY="pplx-..."

# Slack OCR (Optional)
ENABLE_SLACK_OCR="false"
SLACK_BOT_TOKEN="xoxb-your-slack-bot-token"
SLACK_SIGNING_SECRET="your-slack-signing-secret"
OCR_TRIGGER_EMOJI="memo"
GOOGLE_CLOUD_CREDENTIALS_PATH="/path/to/google-cloud-service-account.json"
OCR_GITHUB_PATH="ocr_results"
EXPRESS_PORT=3000
